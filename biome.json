{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNamingConvention": "off",
        "noNonNullAssertion": "off",
        "useSelfClosingElements": "warn"
      },
      "suspicious": {
        "noConsoleLog": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "warn",
        "noUnusedVariables": "warn"
      }
    }
  },
  "formatter": {
    "useEditorconfig": true,
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "crlf",
    "attributePosition": "auto",
    "bracketSpacing": true
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["dist", ".eslintrc.cjs", ".next", "node_modules", ".vscode"],
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "bracketSameLine": false
    }
  }
}
